<!-- app/views/restaurants/_form.html.erb -->
<%= simple_form_for @restaurant do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :address, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :phone_number, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: 'Select a category', input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
